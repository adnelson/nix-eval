name:                nix-eval
version:             0.0.0
-- synopsis:
-- description:
license:             MIT
license-file:        LICENSE
author:              Allen Nelson
maintainer:          ithinkican@gmail.com
-- copyright:
-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     Nix.Eval.Evaluator
                     , Nix.Eval.Values
                     , Nix.Eval.Expressions
  -- other-modules:
  other-extensions:    LambdaCase, OverloadedStrings, NoImplicitPrelude
  build-depends:       base >=4.8 && <5
                     , classy-prelude
                     , containers
                     , unordered-containers
                     , text
                     , mtl
                     , data-fix
                     , system-filepath
  hs-source-dirs:      src
  default-language:    Haskell2010

Test-Suite spec
  Type:                 exitcode-stdio-1.0
  Default-Language:     Haskell2010
  Hs-Source-Dirs:       src
                      , tests
  Ghc-Options:          -Wall
  Main-Is:              Spec.hs
  Build-Depends:        base
                      , hspec


Source-Repository head
  Type:                 git
  Location:             https://github.com/adnelson/nix-eval
